<?xml version="1.0" encoding="UTF-8"?>
<api context="/getMetaDataConfigAPI" name="Test" xmlns="http://ws.apache.org/ns/synapse">
    <resource methods="POST" uri-template="/xlsx">
        <inSequence>
            <property expression="json-eval($.sftpUsername)" name="sftpUsername" scope="default" type="STRING"/>
            <property expression="json-eval($.sftpPassword)" name="sftpPassword" scope="default" type="STRING"/>
            <property expression="json-eval($.remoteFilePath)" name="remoteFilePath" scope="default" type="STRING"/>
            <log>
                <property expression="json-eval($.sftpUsername)" name="sftpUsername"/>
                <property expression="json-eval($.sftpPassword)" name="sftpPassword"/>
                <property expression="json-eval($.remoteFilePath)" name="remoteFilePath"/>
            </log>
            <!--   <property name="columnNames" scope="default" type="STRING" value="ModuleType,CounterPartyCode,EntityCode,Assignment,DocumentNumber,DocumentType,DocumentHeader,InvoiceReference,DocumentDate,PostingDate,DueDate,PaymentTerms,DocCurrAmt,DocCurrency,LocalCurrencyAmt,LocalCurrency,ClearingDocument,TEXT,WithhldgTaxAmt,WithhldgTaxBaseAmT,SGLIndicator"/>
            -->
            <property expression="substring-after(get-property('remoteFilePath'), '.')" name="fileExtension" scope="default" type="STRING"/>
            <switch source="get-property('fileExtension')">
                <case regex="^(xlsx|xls)$">
                    <log>
                        <property name="File type" value="Processing .xlsx file"/>
                    </log>
                    <class name="com.tascua.reader.ExcelReader"/>
                    <enrich>
                        <source clone="true" property="jsonOutput" type="property"/>
                        <target type="body"/>
                    </enrich>
                    <log>
                        <property expression="json-eval($[0].data)" name="enrichJsondata"/>
                        <property expression="$body//*[local-name()='data']/*" name="enricxmldata"/>
                    </log>
                    <payloadFactory media-type="xml">
                        <format>
                            <soapenv:Envelope xmlns:dat="http://ws.wso2.org/dataservice" xmlns:soapenv="http://schemas.xmlsoap.org/soap/envelope/">
                                <soapenv:Header/>
                                <soapenv:Body>
                                    <dat:insertionXlsxData_batch_req>$1</dat:insertionXlsxData_batch_req>
                                </soapenv:Body>
                            </soapenv:Envelope>
                        </format>
                        <args>
                            <arg evaluator="json" expression="$[0].data"/>
                        </args>
                    </payloadFactory>
                    <log level="custom">
                        <property expression="." name="requestPayload of insertionXlsxData"/>
                    </log>
                    <dataServiceCall serviceName="XlsxFetchDS">
                        <source type="body"/>
                        <target type="body"/>
                    </dataServiceCall>
                </case>
                <case regex="csv">
                    <log>
                        <property name="File type" value="Processing .csv file"/>
                    </log>
                </case>
                <default>
                    <log>
                        <property name="File type" value="Unknown or unsupported file type"/>
                    </log>
                </default>
            </switch>
            <respond/>
        </inSequence>
        <outSequence/>
        <faultSequence/>
    </resource>
</api>
